{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All C Files (Raylib)",
      "type": "shell",
      "command": "gcc",
      "args": [
        "*.c",
        "-Iinclude",
        "-Llib",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "-o",
        "game.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Game",
      "type": "shell",
      "command": "game.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
